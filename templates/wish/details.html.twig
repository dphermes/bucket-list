{% extends "base.html.twig" %}

{% block title %}{{ wish.title }} | {{ parent() }}{% endblock %}

{% block body %}

    <h1>{{ wish.title }}</h1>

    <div class="card">
        <div class="card-body">
            {{ wish.description }}
            <div class="wish-author small">Created by {{ wish.author }} in {{ wish.category }} | {{ wish.dateCreated|date('Y-m-d') }}</div>
        </div>
    </div>

{% endblock %}
